<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_marginBottom="8dp"
                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent">
        <TextView android:layout_width="306dp"
                  android:layout_height="29dp"
                  tools:text="Frederico"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/edtNome"
                  android:layout_marginTop="16dp" app:layout_constraintEnd_toStartOf="@+id/btnExcluir"
                  app:layout_constraintHorizontal_bias="0.642" android:layout_marginStart="12dp"/>
        <TextView android:layout_width="305dp"
                  android:layout_height="26dp"
                  tools:text="12/07/2021"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/edtData" android:layout_marginStart="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/edtNome" android:layout_marginTop="4dp"
                  app:layout_constraintEnd_toStartOf="@+id/btnExcluirAgendamento"/>
        <TextView android:layout_width="305dp"
                  android:layout_height="27dp"
                  tools:text="412.512.664-12"
                  app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/edtCPF" android:layout_marginStart="16dp"
                  app:layout_constraintTop_toBottomOf="@+id/edtData" android:layout_marginTop="4dp"
                  app:layout_constraintEnd_toStartOf="@+id/btnExcluirAgendamento"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_delete_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintVertical_bias="0.515" android:id="@+id/btnExcluirAgendamento"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>